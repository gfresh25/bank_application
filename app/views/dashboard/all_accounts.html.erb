<h1>Welcome to your Dashboard, <%= current_user.first_name %> </h1>


<p id="notice"><%= notice %> </p>
<p id="alert"><%= alert %> </p>


<p>Here are your accounts at a glance:</p>

<table class='table'>
  <thead>
    <tr>
    	
    		<th>Account Number</th>
    		<% if current_user.role == 'admin' %> 
	    		<th>Client First Name</th>
	    		<th>Last Name</th>
    		<% end %> 
      <th>Balance</th>
      <th>Account type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
      	<td><%= account.id %></td>
	      	<% if current_user.role == 'admin' %>
		      	<td><%= account.user.first_name %></td>
		      	<td><%= account.user.last_name %></td>
	      	<% end %> 
        <td><%= number_to_currency account.balance %></td>
        <td><%= account.account_type %></td>
        <td><%= link_to 'Show', account, class: 'btn btn-sm btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
	<p><%= link_to 'Open a New Account', new_account_path, class: 'btn btn-success btn-lg' %> </p>
</div>

